{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                  // ← OK to keep true in tsconfig.app.json
    "jsx": "react-jsx",

    /* Project references REQUIRE composite = true */
    "composite": true,               // ← THIS WAS MISSING (critical!)

    /* Declaration needed for project references */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Linting & Strictness (Japanese pro-level) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Path aliases — match your vite.config.ts */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@firebase": ["src/firebase.ts"]
    },

    /* For Firebase & Mapbox */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Better autocomplete & safety */
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src",
    ".vite/types"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}